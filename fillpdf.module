  while ($field = db_fetch_object($result)) {  
    $row = array();
    $row[] = check_plain($field->label);
    $row[] = check_plain($field->pdf_key);   
    $row[] = $field->value;
    $row[] = l(t('Edit'), "admin/content/fillpdf/form/$pdf_form->fid/edit/$field->pdf_key");
